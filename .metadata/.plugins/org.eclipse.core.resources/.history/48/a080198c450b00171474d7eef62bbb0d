        DataRowJson row=ConvertRow(index);
        return row;
    //}
    
}
public boolean HasData() {
    if(index<rowCount)
    {
        return true;
    }
    else
    {
    return false;
    }
}
public DataRowJson next() {
    DataRowJson row=  ConvertRow(index);
    index++;
    return row;
}
}
